<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0：纯净模式" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView0"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:ProgressRadius="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1：直角带白色切割线" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView1"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:CenterLineTilt="-50"
            app:ProgressRadius="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2：圆角不带切割线" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView2"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_20"
            app:CenterLineSize="0dp"
            app:CenterLineTilt="30"
            app:ProgressRadius="15dp" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView21"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_2"
            app:CenterLineSize="0dp"
            app:CenterLineTilt="-30"
            app:ProgressRadius="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="3：圆角带切割线无文字(带左右极限值)" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView32"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_15"
            app:CenterLineSize="10dp"
            app:CenterLineTilt="30"
            app:ProgressRadius="10dp"
            app:ShowProgressText="false" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView3"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_4"
            app:CenterLineSize="10dp"
            app:CenterLineTilt="-30"
            app:ProgressRadius="10dp"
            app:ShowProgressText="false" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView31"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="2dp"
            app:CenterLineSize="10dp"
            app:CenterLineTilt="-30"
            app:ProgressRadius="10dp"
            app:ShowProgressText="false" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="4：圆角带切割线有文字" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView4"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_15"
            app:CenterLineSize="10dp"
            app:CenterLineTilt="30"
            app:ProgressRadius="10dp"
            app:ShowProgressText="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="5：直角带切割线有文字，有中间文字" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView5"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            app:CenterLineColor="@color/color_white"
            app:CenterLineSize="10dp"
            app:CenterLineTilt="30"
            app:CenterTextSize="@dimen/sp_15"
            app:ProgressRadius="0dp"
            app:Radius="@dimen/dp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="6：圆角带切割线有文字，有中间文字" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView6"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            app:CenterLineColor="@color/colorAccent"
            app:CenterLineSize="10dp"
            app:CenterLineTilt="-30"
            app:CenterText="啊哈"
            app:CenterTextColor="@color/color_e14c5b"
            app:CenterTextSize="@dimen/sp_8"
            app:CricularBgColor="@color/color_9cc4f5"
            app:ProgressRadius="10dp"
            app:Radius="@dimen/dp_16"
            app:textPadding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="7：圆角无切割线无文字，有中间文字" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView7"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            app:CenterLineColor="@color/colorAccent"
            app:CenterLineSize="0dp"
            app:CenterLineTilt="0"
            app:CenterText="好"
            app:CenterTextColor="@color/color_e14c5b"
            app:CenterTextFew="少"
            app:CenterTextMany="多"
            app:CenterTextSize="@dimen/sp_10"
            app:CricularBgColor="@color/color_9cc4f5"
            app:ProgressRadius="10dp"
            app:Radius="@dimen/dp_16"
            app:ShowProgressText="false"
            app:textPadding="8dp" />


        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView71"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            app:CenterLineColor="@color/colorAccent"
            app:CenterLineSize="0dp"
            app:CenterLineTilt="60"
            app:CenterText="好"
            app:CenterTextColor="@color/color_e14c5b"
            app:CenterTextColorAlways="@color/colorAccent"
            app:CenterTextFew="少"
            app:CenterTextMany="多"
            app:CenterTextSize="@dimen/sp_10"
            app:CricularBgColor="@color/color_9cc4f5"
            app:ProgressRadius="10dp"
            app:Radius="@dimen/dp_16"
            app:ShowProgressText="false"
            app:textPadding="8dp" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView72"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_8"
            app:CenterLineColor="@color/colorAccent"
            app:CenterLineSize="0dp"
            app:CenterLineTilt="-80"
            app:CenterText="平"
            app:CenterTextColor="@color/color_e14c5b"
            app:CenterTextFew="少"
            app:CenterTextMany="多"
            app:CenterTextSize="@dimen/sp_10"
            app:CricularBgColor="@color/color_9cc4f5"
            app:ProgressRadius="10dp"
            app:Radius="@dimen/dp_16"
            app:ShowProgressText="true"
            app:textPadding="8dp" />

        <com.ywy.percentageview.PercentageView
            android:id="@+id/mPercentageView73"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_8"
            app:CenterLineColor="@color/colorAccent"
            app:CenterLineSize="2dp"
            app:CenterLineTilt="0"
            app:CenterText=""
            app:CenterTextColor="@color/color_e14c5b"
            app:CenterTextFew=""
            app:CenterTextMany=""
            app:CenterTextSize="@dimen/sp_10"
            app:CricularBgColor="@color/colorAccent"
            app:ProgressRadius="10dp"
            app:Radius="@dimen/dp_3"
            app:ShowProgressText="true"
            app:textPadding="8dp" />

        <!--    <com.ywy.percentageview.PercentageView-->
