<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ywy.percentageview.PercentageView
        android:id="@+id/mSdkPercentageView2"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_40"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_15"
        app:CenterLineSize="4dp"
        app:CenterLineTilt="20"
        app:CenterText="平"
        app:CenterTextColorFew="#333333"
        app:CenterTextColorMany="#ff0000"
        app:CenterTextFew="少"
        app:CenterTextMany="多"
        app:CenterTextSize="14sp"
        app:LeftProgressColor="#f06"
        app:ProgressRadius="1dp"
        app:Radius="@dimen/dp_20"
        app:RightProgressColor="#ccf0e2"
        app:ShowLeftBeforeUnit="false"
        app:ShowProgressText="true"
        app:ShowRightBeforeUnit="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textLeftColor="@color/color_zi"
        app:textPadding="4dp"
        app:textRightColor="@color/color_yellow" />

</androidx.constraintlayout.widget.ConstraintLayout>